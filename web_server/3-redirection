#!/usr/bin/env bash
# Configures Nginx server with a 301 redirect for /redirect_me

# Update package list and install Nginx
apt-get update
apt-get install -y nginx

# Create a simple index page
echo "Hello World!" > /var/www/html/index.html

# Configure Nginx with redirect
# Add redirect configuration to the default server block
sed -i '/server_name _;/a \\n\tlocation /redirect_me {\n\t\treturn 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;\n\t}' /etc/nginx/sites-available/default

# Test Nginx configuration
nginx -t

# Restart Nginx to apply changes
service nginx restart
