#!/usr/bin/env bash
# Configures Nginx server with a custom 404 page

# Update package list and install Nginx
apt-get update
apt-get install -y nginx

# Create a simple index page
echo "Hello World!" > /var/www/html/index.html

# Create custom 404 page
echo "Ceci n'est pas une page" > /var/www/html/404.html

# Configure Nginx with redirect and custom 404 page
# Add redirect configuration to the default server block
sed -i '/server_name _;/a \\n\tlocation /redirect_me {\n\t\treturn 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;\n\t}\n\n\terror_page 404 /404.html;\n\tlocation = /404.html {\n\t\tinternal;\n\t}' /etc/nginx/sites-available/default

# Test Nginx configuration
nginx -t

# Restart Nginx to apply changes
service nginx restart
